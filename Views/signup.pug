doctype html
html(lang="es")
    head 
        title #{tituloPagina}
        link(rel='stylesheet', href='/css/signUp.css')
        link(rel='stylesheet', href='/css/global.css')
        link(rel="stylesheet", href="/css/notificacionErrores.css")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="icon" type="image/x-icon" href="./Assets/IconoWeb.ico")
        link(rel="icon" type="image/x-icon" href="/assets/IconoWeb.ico")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
    body
        .singup-container
            a(href="/iniciar-sesion" class="atras")
                span(class="material-symbols-outlined") arrow_back 

            h2.titulo Registrate
            form(action="/registrar-new-user" class="formulario" method='POST')
                label(for="usuario" class="etiqueta-form") Usuario
                input(type="text", placeholder="Usuario", id="usuario", name="usuario", class="entrada", required)

                label(for="correo" class="etiqueta-form") Correo electrónico
                input(type="text", placeholder="Correo", id="correo", name="correo", class="entrada", required)
                
                label(for="contrasenia" class="etiqueta-form") Contraseña
                input(type="password", placeholder="Contraseña", id="contrasenia", name="contrasenia", class="entrada", required)

                label(for="confirmPassword" class="etiqueta-form") Confirmar contraseña
                input(type="password", placeholder="Confirmar contraseña", id="confirmPassword", name="confirmPassword", class="entrada", required)
                
                label(for="checkBox", id="checkboxLabel")
                    input(type="checkbox" id="checkBox" name="marcador")
                    |  Mostrar contraseñas

                button(type="submit", class="btn") Registrarse
        
            p.texto Se aplican  
                a(href='/terminos-y-condiciones' class="registrate") Terminos y Condiciones


        if aviso
            div#snackbar
                | #{aviso}
                script.
                    const x = document.getElementById("snackbar");
                    x.className = "show";
                    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 4000);
        script.
            // Medio para poder mostrar la contraseña
            const isSelected = document.getElementById("checkBox");
            const pwd = document.getElementById("contrasenia");
            const pwdConfirm = document.getElementById("confirmPassword");
            // Evento cuando se tenga un click
            isSelected.addEventListener('click', () => {
                if(pwd.type === 'password' && pwdConfirm.type === 'password'){
                    pwd.type = 'text';
                    pwdConfirm.type = 'text';
                } else { 
                    pwd.type = 'password';
                    pwdConfirm.type = 'password';
                }
            });