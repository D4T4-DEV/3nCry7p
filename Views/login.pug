doctype html
html(lang="es")
    head 
        title #{tituloPagina}
        link(rel='stylesheet', href='/css/login.css')
        link(rel='stylesheet', href='/css/global.css')
        link(rel="stylesheet", href="/css/notificacionErrores.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
    body 
        .login-container
            a(href="/" class="atras")
                span(class="material-symbols-outlined") arrow_back 
                
            h2.titulo Iniciar Sesión
            form(action="/iniciar-sesion-proceso" class="formulario" method='POST')
                label(for="username" class="etiqueta-form") Usuario
                input(type="text", placeholder="Usuario", id="usuario", name="username", class="entrada")
                
                label(for="pwd" class="etiqueta-form") Contraseña
                input(type="password", placeholder="Contraseña", id="contrasenia", name="pwd", class="entrada")
                
                label(for="checkBox", id="checkboxLabel")
                    input(type="checkbox" id="checkBox" name="marcador")
                    |  Mostrar contraseña

                button(type="submit", class="btn") Iniciar Sesión
            
            p.texto ¿No tienes cuenta? 
                a(href='/registrarse' class="registrate") Registrate

        if aviso
            div#snackbar= aviso
                script.
                    const x = document.getElementById("snackbar");
                    x.className = "show";
                    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
        script.
            // Medio para poder mostrar la contraseña
            const isSelected = document.getElementById("checkBox");
            const pwd = document.getElementById("contrasenia")
            // Evento cuando se tenga un click
            isSelected.addEventListener('click', () => {
                if(pwd.type === 'password') {
                    pwd.type = 'text';
                } else { 
                    pwd.type = 'password';
                }
            });